pipeline {
   agent any
    tools{
    maven "maven"
    jdk "jdk"
    git "git"
    }
    stages {
        stage('Build') {
            steps {
                echo "It's Build"
                git credentialsId: 'ce671b7f-e0b8-41c6-89d6-bbeeb9921152', url: 'https://github.com/lopi2131/PageObjectSelenoidAllure'
                echo "Stop build"
            }
        }
		stage('Clean') {
            steps {
                echo "tests execute"
                bat 'mvn clean'
            }
        }
		stage('Test') {
            steps {
                echo "tests run"
                bat 'mvn test'
	
            }
        }
	stage('Results') {
          steps {
             echo "Allure"
             bat "allure includeProperties: false, jdk: 'jdk', results: [[path: 'target/allure-results']]"
              
          }
      }
    }
    post {
        always {
	emailext body: '$PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_STATUS', recipientProviders: [[$class: 'DevelopersRecipientProvider'], [$class: 'RequesterRecipientProvider']], subject: 'Test'

      }
    }
}
