pipeline {
   agent any
    tools{
    maven "maven"
    jdk "jdk"
    }
    stages {
        stage('Build') {
            steps {
                echo "It's Build"
                git credentialsId: 'ce671b7f-e0b8-41c6-89d6-bbeeb9921152', url: 'https://github.com/lopi2131/PageObjectSelenoidAllure' 
                echo "Stop build"
            }
        }
		stage('Clean') {
            steps {
                echo "tests execute"
                bat 'mvn clean'
            }
        }
		stage('Test') {
            steps {
                echo "tests run"
                bat 'mvn test'
            }
        }
    }
    post {
        always {
            emailext body: ' Название pipeline - $PROJECT_NAME 
	    Номе билда - Build # $BUILD_NUMBER 
	    Статус билда- $BUILD_STATUS: 
	    Ветка реопзитория - ${GIT_BRANCH} ,
	    URL билда- $BUILD_URL',
	    Количество тестов - ${TEST_COUNTS,var="TYPE"},
	    recipientProviders: [[$class: 'DevelopersRecipientProvider'], [$class: 'RequesterRecipientProvider']], subject: 'Test'
        }
    }
}
